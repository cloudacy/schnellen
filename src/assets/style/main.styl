@import "vars.styl"
@import "~averi-style/src/functions.styl"
@import "~averi-style/src/mixins.styl"
@import "~averi-style/src/fonts/NunitoSans/nunitosans.styl"
@import "~averi-style/src/typography.styl"
@import "~averi-style/src/responsive.styl"
@import "~averi-style/src/columns.styl"
@import "~averi-style/src/table.styl"
@import "~averi-style/src/form.styl"
@import "~averi-style/src/card.styl"
@import "~averi-style/src/code.styl"
@import "~averi-style/src/tooltip.styl"

#app
  min-height: 100vh
  background: #fcfcfc

.icon-big
  min-width: 24px
  width: 24px
  min-height: 24px
  height: 24px

  &.center
    transform: translateY(5px);

  &.right
    margin-right: 16px

.f-1
  flex: 1

.flex-wrap
  flex-wrap: wrap

.btn-round
  border-radius: 50%
  padding: 8px
  // font-size: 14px

.players
  color: white
  margin: 0 -4px 0 -4px

  button
    padding: 0
    margin-left: 0.5em
    color: inherit
    background: none
    border: none
    font: inherit
    font-size: 12px
    appearance: none

  .badge
    font-size: 14px
    margin: 0 4px 8px 4px

.table
  th
  td
    padding: 0.5em
    text-align: center

  tfoot
    font-size: 13px

.point-ctl
  font-size: 14px

.table-wrap
  margin-bottom: 50px + 16px + 16px // space for next button

footer
  position: fixed
  bottom: 16px
  left: 16px
  right: 16px
  display: flex
  align-items: center
  justify-content: space-between

.mult
  display: flex
  align-items: center
  font-size: 14px

  .btn
    border: none

  .rad
    font-size: 12px

.next
  padding: 0.5em
  border: none
  font-size: 1.5em
